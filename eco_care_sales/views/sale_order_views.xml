<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="sale_order_view_form_product_exclusive" model="ir.ui.view">
        <field name="name">sale.order.view.form.product_exclusive</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='order_line']/form//field[@name='product_updatable']" position="after">
                <field name="order_partner_id" invisible="1"/>
            </xpath>
            <xpath expr="//field[@name='order_line']/tree/field[@name='product_updatable']" position="after">
                <field name="order_partner_id" invisible="1"/>
            </xpath>
        </field>
    </record>
</odoo>
